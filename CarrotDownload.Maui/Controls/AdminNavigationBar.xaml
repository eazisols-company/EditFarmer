<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarrotDownload.Maui.Controls.AdminNavigationBar">
    
    <VerticalStackLayout Spacing="0">
        <Border BackgroundColor="White"
                Padding="20,12"
                Shadow="{Shadow Brush=Black, Opacity=0.05, Radius=5, Offset='0,2'}">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <!-- Welcome Message -->
                <Label Grid.Column="0"
                       x:Name="WelcomeLabel"
                       Text="Admin Portal"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="#ff5722"
                       VerticalOptions="Center"/>
                
                <!-- Navigation Links -->
                <HorizontalStackLayout Grid.Column="1" 
                                       Spacing="25" 
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center">
                    <Label x:Name="DashboardLabel"
                           Text="Dashboard" 
                           FontSize="14" 
                           TextColor="#333"
                           FontAttributes="None"
                           VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnDashboardClicked" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label x:Name="UsersLabel"
                           Text="Users" 
                           FontSize="14" 
                           TextColor="#333"
                           FontAttributes="None"
                           VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnUsersClicked" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label x:Name="MacIdsLabel"
                           Text="MAC IDs" 
                           FontSize="14" 
                           TextColor="#333"
                           FontAttributes="None"
                           VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMacIdsClicked" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label x:Name="LogoutLabel"
                           Text="Log Out" 
                           FontSize="14" 
                           TextColor="#333"
                           FontAttributes="None"
                           VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLogoutClicked" />
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>

                <!-- Logo -->
                <Image Grid.Column="2"
                       Source="farmer_logo_pixel.png"
                       HeightRequest="40"
                       Aspect="AspectFit"
                       HorizontalOptions="End"/>
            </Grid>
        </Border>
        
        <!-- Accent Color Border -->
        <BoxView x:Name="AccentBorder"
                 HeightRequest="4"
                 BackgroundColor="#ff5722"
                 HorizontalOptions="FillAndExpand"/>
    </VerticalStackLayout>
    
</ContentView>
