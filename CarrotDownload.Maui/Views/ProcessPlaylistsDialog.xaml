<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarrotDownload.Maui.Views.ProcessPlaylistsDialog"
             BackgroundColor="Transparent">
    
    <Grid BackgroundColor="#80000000">
        
        <!-- Dialog Card -->
        <Border BackgroundColor="White"
                StrokeShape="RoundRectangle 12"
                Stroke="#e0e0e0"
                StrokeThickness="1"
                Padding="30"
                WidthRequest="500"
                VerticalOptions="Center"
                HorizontalOptions="Center">
            <VerticalStackLayout Spacing="20">
                
                <!-- Confirmation Message -->
                <VerticalStackLayout Spacing="5">
                    <Label x:Name="ConfirmLabel"
                           Text="Confirm Processing 1 Playlist"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#333"
                           HorizontalOptions="Center"/>
                    <Label Text="Are you sure you want to proceed?"
                           FontSize="14"
                           TextColor="#666"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
                
                <!-- Yes, Process Button -->
                <Button Text="Yes, Process"
                        BackgroundColor="#ff5722"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Padding="15"
                        Clicked="OnYesProcessClicked"/>
                
                <!-- Cancel Button -->
                <Button Text="Cancel"
                        BackgroundColor="#6c757d"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Padding="15"
                        Clicked="OnCancelClicked"/>
                
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
