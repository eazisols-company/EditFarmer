<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarrotDownload.Maui.Views.ConfirmationDialog"
             BackgroundColor="Transparent">
    
    <Grid BackgroundColor="#99000000" x:Name="OverlayGrid" Opacity="0">
        <Border BackgroundColor="White"
                StrokeShape="RoundRectangle 16"
                Stroke="#e0e0e0"
                StrokeThickness="1"
                Padding="30"
                WidthRequest="420"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Scale="0.9"
                x:Name="DialogBorder">
            <VerticalStackLayout Spacing="20">
                <!-- Icon (Optional, dynamically set or generic) -->
                <!-- Title -->
                <Label x:Name="TitleLabel"
                       Text="Confirm Action"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="#222"
                       HorizontalTextAlignment="Center"/>
                
                <!-- Divider -->
                <BoxView HeightRequest="1" BackgroundColor="#f0f0f0" Margin="10,0"/>

                <!-- Message -->
                <Label x:Name="MessageLabel"
                       Text="Are you sure?"
                       FontSize="16"
                       TextColor="#555"
                       LineHeight="1.3"
                       LineBreakMode="WordWrap"
                       HorizontalTextAlignment="Center"
                       Margin="0,10,0,10"/>
                
                <!-- Buttons -->
                <Grid ColumnDefinitions="*, *" ColumnSpacing="15" Margin="0,10,0,0">
                    <Button x:Name="CancelButton"
                            Grid.Column="0"
                            Text="Cancel"
                            TextColor="#666"
                            BackgroundColor="White"
                            BorderColor="#e0e0e0"
                            BorderWidth="1"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HeightRequest="48"
                            Clicked="OnCancelClicked">
                    </Button>
                            
                    <Button x:Name="ConfirmButton"
                            Grid.Column="1"
                            Text="Confirm"
                            TextColor="White"
                            BackgroundColor="#ff5722"
                            BorderColor="#e0e0e0"
                            BorderWidth="1"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HeightRequest="48"
                            Clicked="OnConfirmClicked">
                    </Button>
                </Grid>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
