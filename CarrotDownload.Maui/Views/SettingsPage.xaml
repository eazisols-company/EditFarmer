<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:CarrotDownload.Maui.Controls"
             x:Class="CarrotDownload.Maui.Views.SettingsPage"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="70,*">
        <!-- Navigation Bar -->
        <controls:NavigationBar Grid.Row="0" HeightRequest="70"/>

        <!-- Main Content -->
        <ScrollView Grid.Row="1" VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never">
            <VerticalStackLayout Spacing="0">
            <Grid ColumnDefinitions="0.5*,11*,0.5*">
            <VerticalStackLayout Grid.Column="1" Padding="40" Spacing="30" HorizontalOptions="Center" MaximumWidthRequest="1400">
                
                <!-- Settings Header -->
                <Grid ColumnDefinitions="*,Auto">
                    <Label Text="Settings"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="#333"
                           HorizontalOptions="Start"/>
                    
                    <!-- Status Notification Banner -->
                    <Border x:Name="StatusBanner" 
                            Grid.Column="1"
                            IsVisible="False"
                            Padding="15,8"
                            StrokeShape="RoundRectangle 8"
                            VerticalOptions="Center">
                        <HorizontalStackLayout Spacing="10">
                            <Label x:Name="StatusIcon" Text="✓" FontSize="16" FontAttributes="Bold" VerticalOptions="Center"/>
                            <Label x:Name="StatusText" FontSize="14" VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>
                </Grid>

                <!-- User Information Section -->
                <Border BackgroundColor="#f5f5f5"
                        StrokeShape="RoundRectangle 8"
                        Stroke="#e0e0e0"
                        StrokeThickness="1"
                        Padding="30">
                    <VerticalStackLayout Spacing="20">
                        <Label Text="User Information"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#333"/>

                        <!-- Full Name -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Full Name *"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#333"/>
                            <Border Stroke="#cccccc" StrokeThickness="1" StrokeShape="RoundRectangle 4" BackgroundColor="White" Padding="8,0" Margin="1">
                                <controls:BorderlessEntry x:Name="FullNameEntry"
                                       Placeholder="Full name"
                                       PlaceholderColor="#999"
                                       TextColor="#333"
                                       BackgroundColor="Transparent"
                                       HeightRequest="40"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Email -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Email *"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#333"/>
                            <Border Stroke="#cccccc" StrokeThickness="1" StrokeShape="RoundRectangle 4" BackgroundColor="White" Padding="8,0" Margin="1">
                                <controls:BorderlessEntry x:Name="EmailEntry"
                                       Placeholder="email@example.com"
                                       PlaceholderColor="#999"
                                       TextColor="#333"
                                       BackgroundColor="Transparent"
                                       IsReadOnly="True"
                                       IsEnabled="False"
                                       Keyboard="Email"
                                       HeightRequest="40"/>
                            </Border>
                        </VerticalStackLayout>

                    </VerticalStackLayout>
                </Border>

                <!-- Account Actions Section -->
                <Border BackgroundColor="#f5f5f5"
                        StrokeShape="RoundRectangle 8"
                        Stroke="#e0e0e0"
                        StrokeThickness="1"
                        Padding="30">
                    <VerticalStackLayout Spacing="20">
                        <Label Text="Account Actions"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#333"/>

                         <!-- Change Password Section -->
                        <VerticalStackLayout Spacing="10">
                            <Button x:Name="ToggleChangePasswordBtn"
                                    Text="Change Password"
                                    BackgroundColor="#ff9800"
                                    TextColor="White"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    CornerRadius="6"
                                    HeightRequest="40"
                                    HorizontalOptions="Start"
                                    WidthRequest="200"
                                    Clicked="OnToggleChangePasswordClicked"/>

                            <!-- Change Password Form (Initially Hidden) -->
                            <VerticalStackLayout x:Name="ChangePasswordForm" 
                                               IsVisible="False" 
                                               Spacing="15" 
                                               Margin="0,10,0,0">
                                
                                <BoxView HeightRequest="1" BackgroundColor="#eee" Margin="0,5"/>

                                <!-- Step 1: Verify Current Password -->
                                <VerticalStackLayout x:Name="VerifyStep" Spacing="8">
                                    <Label Text="Current Password *"
                                           FontSize="13"
                                           FontAttributes="Bold"
                                           TextColor="#555"/>
                                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                        <Border Stroke="#cccccc" StrokeThickness="1" StrokeShape="RoundRectangle 4" BackgroundColor="#f9f9f9" Padding="8,0" Margin="1">
                                            <controls:BorderlessEntry x:Name="CurrentPasswordEntry"
                                                   Placeholder="Enter current password"
                                                   IsPassword="True"
                                                   BackgroundColor="Transparent"
                                                   HeightRequest="40"/>
                                        </Border>
                                        <Button Grid.Column="1"
                                                x:Name="VerifyCurrentPwdButton"
                                                Text="Verify"
                                                BackgroundColor="#607d8b"
                                                TextColor="White"
                                                FontSize="12"
                                                WidthRequest="80"
                                                HeightRequest="40"
                                                Clicked="OnVerifyCurrentPasswordClicked"/>
                                    </Grid>
                                </VerticalStackLayout>

                                <!-- Step 2: Set New Password (Hidden until Step 1 passes) -->
                                <VerticalStackLayout x:Name="NewPasswordStep" 
                                                   IsVisible="False" 
                                                   Spacing="12">
                                    
                                    <Label Text="✅ Password Verified. Enter New Password:"
                                           TextColor="#28a745"
                                           FontSize="13"
                                           FontAttributes="Bold"
                                           Margin="0,0,0,5"/>

                                    <VerticalStackLayout Spacing="5">
                                        <Label Text="New Password *"
                                               FontSize="13"
                                               FontAttributes="Bold"
                                               TextColor="#555"/>
                                        <Border Stroke="#cccccc" StrokeThickness="1" StrokeShape="RoundRectangle 4" BackgroundColor="#f9f9f9" Padding="8,0" Margin="1">
                                            <controls:BorderlessEntry x:Name="NewPasswordEntry"
                                                   Placeholder="Enter new password"
                                                   IsPassword="True"
                                                   BackgroundColor="Transparent"
                                                   HeightRequest="40"
                                                   TextChanged="OnNewPasswordTextChanged"/>
                                        </Border>
                                        <Label x:Name="NewPasswordValidationLabel"
                                               Text="Password must be at least 6 characters with 1 uppercase, 1 lowercase, 1 number, and 1 special character"
                                               TextColor="#6c757d"
                                               FontSize="10"
                                               Margin="3,0,0,0"/>
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Spacing="5">
                                        <Label Text="Confirm New Password *"
                                               FontSize="13"
                                               FontAttributes="Bold"
                                               TextColor="#555"/>
                                        <Border Stroke="#cccccc" StrokeThickness="1" StrokeShape="RoundRectangle 4" BackgroundColor="#f9f9f9" Padding="8,0" Margin="1">
                                            <controls:BorderlessEntry x:Name="ConfirmNewPasswordEntry"
                                                   Placeholder="Re-type new password"
                                                   IsPassword="True"
                                                   BackgroundColor="Transparent"
                                                   HeightRequest="40"/>
                                        </Border>
                                    </VerticalStackLayout>

                                    <Button Text="Update Password"
                                            BackgroundColor="#28a745"
                                            TextColor="White"
                                            FontSize="14"
                                            FontAttributes="Bold"
                                            HeightRequest="45"
                                            Margin="0,10,0,0"
                                            Clicked="OnUpdatePasswordClicked"/>
                                </VerticalStackLayout>
                            </VerticalStackLayout>
                        </VerticalStackLayout>

                        <!-- Delete Account Button -->
                        <Button Text="Delete Account"
                                BackgroundColor="#f44336"
                                TextColor="White"
                                FontSize="14"
                                FontAttributes="Bold"
                                CornerRadius="6"
                                HeightRequest="40"
                                HorizontalOptions="Start"
                                WidthRequest="200"
                                Clicked="OnDeleteAccountClicked"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Address Information Section -->
                <Border BackgroundColor="#f5f5f5"
                        StrokeShape="RoundRectangle 8"
                        Stroke="#e0e0e0"
                        StrokeThickness="1"
                        Padding="30">
                    <VerticalStackLayout Spacing="20">
                        <Label Text="Shipping Information"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#333"/>

                        <!-- Recipient Name -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Recipient Name *"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#333"/>
                            <Border Stroke="#cccccc" StrokeThickness="1" StrokeShape="RoundRectangle 4" BackgroundColor="White" Padding="8,0" Margin="1">
                                <controls:BorderlessEntry x:Name="RecipientNameEntry"
                                       Placeholder="John Doe"
                                       PlaceholderColor="#999"
                                       TextColor="#333"
                                       BackgroundColor="Transparent"
                                       HeightRequest="40"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Street Address -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Street Address *"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#333"/>
                            <Border Stroke="#cccccc" StrokeThickness="1" StrokeShape="RoundRectangle 4" BackgroundColor="White" Padding="8,0" Margin="1">
                                <controls:BorderlessEntry x:Name="StreetAddressEntry"
                                       Placeholder="123 Main St"
                                       PlaceholderColor="#999"
                                       TextColor="#333"
                                       BackgroundColor="Transparent"
                                       HeightRequest="40"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- City, State, ZIP, Country Grid -->
                        <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="15">
                            <!-- City -->
                            <VerticalStackLayout Grid.Column="0" Spacing="8">
                                <Label Text="City *"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#333"/>
                                <Border Stroke="#cccccc" StrokeThickness="1" StrokeShape="RoundRectangle 4" BackgroundColor="White" Padding="8,0" Margin="1">
                                    <controls:BorderlessEntry x:Name="CityEntry"
                                           Placeholder="Portland"
                                           PlaceholderColor="#999"
                                           TextColor="#333"
                                           BackgroundColor="Transparent"
                                           HeightRequest="40"/>
                                </Border>
                            </VerticalStackLayout>

                            <!-- State/Province -->
                            <VerticalStackLayout Grid.Column="1" Spacing="8">
                                <Label Text="State/Province *"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#333"/>
                                <Border Stroke="#cccccc" StrokeThickness="1" StrokeShape="RoundRectangle 4" BackgroundColor="White" Padding="8,0" Margin="1">
                                    <controls:BorderlessEntry x:Name="StateEntry"
                                           Placeholder="OR"
                                           PlaceholderColor="#999"
                                           TextColor="#333"
                                           BackgroundColor="Transparent"
                                           HeightRequest="40"/>
                                </Border>
                            </VerticalStackLayout>

                            <!-- ZIP/Postal -->
                            <VerticalStackLayout Grid.Column="2" Spacing="8">
                                <Label Text="ZIP/Postal *"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#333"/>
                                <Border Stroke="#cccccc" StrokeThickness="1" StrokeShape="RoundRectangle 4" BackgroundColor="White" Padding="8,0" Margin="1">
                                    <controls:BorderlessEntry x:Name="ZipEntry"
                                           Placeholder="97204"
                                           PlaceholderColor="#999"
                                           TextColor="#333"
                                           BackgroundColor="Transparent"
                                           HeightRequest="40"/>
                                </Border>
                            </VerticalStackLayout>

                            <!-- Country -->
                            <VerticalStackLayout Grid.Column="3" Spacing="8">
                                <Label Text="Country *"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#333"/>
                                <Border Stroke="#cccccc" StrokeThickness="1" StrokeShape="RoundRectangle 4" BackgroundColor="White" Padding="8,0" Margin="1">
                                    <controls:BorderlessEntry x:Name="CountryEntry"
                                           Text="United States"
                                           IsReadOnly="True"
                                           IsEnabled="False"
                                           TextColor="#333"
                                           BackgroundColor="Transparent"
                                           HeightRequest="40"/>
                                </Border>
                            </VerticalStackLayout>
                        </Grid>
                        
                        <!-- Phone and Neighborhood/Landmark Row -->
                        <Grid ColumnDefinitions="*,*,*" ColumnSpacing="15">
                            <!-- Phone -->
                            <VerticalStackLayout Grid.Column="0" Spacing="8">
                                <Label Text="Phone *"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#333"/>
                                <Border Stroke="#cccccc" StrokeThickness="1" StrokeShape="RoundRectangle 4" BackgroundColor="White" Padding="8,0" Margin="1">
                                    <controls:BorderlessEntry x:Name="PhoneEntry"
                                           Placeholder="(000) 123-4567"
                                           PlaceholderColor="#999"
                                           TextColor="#333"
                                           BackgroundColor="Transparent"
                                           Keyboard="Telephone"
                                           HeightRequest="40"/>
                                </Border>
                            </VerticalStackLayout>
                        
                            <!-- Neighborhood -->
                            <VerticalStackLayout Grid.Column="1" Spacing="8">
                                <Label Text="Neighborhood"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#333"/>
                                <Border Stroke="#cccccc" StrokeThickness="1" StrokeShape="RoundRectangle 4" BackgroundColor="White" Padding="8,0" Margin="1">
                                    <controls:BorderlessEntry x:Name="NeighborhoodEntry"
                                           Placeholder="Neighborhood"
                                           PlaceholderColor="#999"
                                           TextColor="#333"
                                           BackgroundColor="Transparent"
                                           HeightRequest="40"/>
                                </Border>
                            </VerticalStackLayout>

                            <!-- Landmark -->
                            <VerticalStackLayout Grid.Column="2" Spacing="8">
                                <Label Text="Landmark"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#333"/>
                                <Border Stroke="#cccccc" StrokeThickness="1" StrokeShape="RoundRectangle 4" BackgroundColor="White" Padding="8,0" Margin="1">
                                    <controls:BorderlessEntry x:Name="LandmarkEntry"
                                           Placeholder="Landmark (e.g. School)"
                                           PlaceholderColor="#999"
                                           TextColor="#333"
                                           BackgroundColor="Transparent"
                                           HeightRequest="40"/>
                                </Border>
                            </VerticalStackLayout>
                        </Grid>
                        <!-- Save Address Button -->
                        <Button x:Name="SaveAddressButton"
                                Text="Save Address"
                                BackgroundColor="#0066ff"
                                TextColor="White"
                                FontSize="14"
                                FontAttributes="Bold"
                                CornerRadius="6"
                                HeightRequest="40"
                                HorizontalOptions="End"
                                WidthRequest="150"
                                Clicked="OnSaveAddressClicked"/>
                        
                        <!-- Saved Addresses Section -->
                        <VerticalStackLayout x:Name="SavedAddressesSection" 
                                           Spacing="15"
                                           Margin="0,20,0,0"
                                           IsVisible="False">
                            <Label Text="Saved Addresses (0)"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#333"/>
                            
                            <!-- Saved addresses will be added here dynamically -->
                            <VerticalStackLayout x:Name="SavedAddressesList" Spacing="10"/>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Accent Color Section -->
                <Border BackgroundColor="#f5f5f5"
                        StrokeShape="RoundRectangle 8"
                        Stroke="#e0e0e0"
                        StrokeThickness="1"
                        Padding="30">
                    <VerticalStackLayout Spacing="20">
                        <Label Text="Accent Color"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#333"/>

                        <!-- Color Palette -->
                        <FlexLayout Wrap="Wrap" 
                                    JustifyContent="Start"
                                    AlignItems="Start"
                                    x:Name="ColorPalette">
                            <!-- Colors will be added programmatically -->
                        </FlexLayout>

                        <!-- Selected Color Display -->
                        <HorizontalStackLayout Spacing="5" VerticalOptions="Center">
                            <Border x:Name="SelectedColorBorder"
                                    BackgroundColor="#0066ff"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    StrokeShape="RoundRectangle 4"
                                    StrokeThickness="2"
                                    Stroke="#333"/>
                            <Label Text="#" 
                                   FontSize="16" 
                                   FontAttributes="Bold" 
                                   TextColor="#333" 
                                   VerticalOptions="Center"
                                   Margin="5,0,0,0"/>
                             <Border Stroke="#cccccc" StrokeThickness="1" StrokeShape="RoundRectangle 4" BackgroundColor="White" Padding="8,0" VerticalOptions="Center" Margin="1">
                                 <controls:BorderlessEntry x:Name="HexColorEntry"
                                        Placeholder="FFFFFF"
                                        PlaceholderColor="#999"
                                        Text="0066FF"
                                        FontSize="14"
                                        FontFamily="Consolas"
                                        TextColor="#333"
                                        WidthRequest="120"
                                        HeightRequest="40"
                                        BackgroundColor="Transparent"
                                        TextChanged="OnHexColorTextChanged"/>
                             </Border>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>



                <!-- Save All Settings Button -->
                <Button Text="Save All Settings"
                        BackgroundColor="#ff5722"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="6"
                        HeightRequest="50"
                        HorizontalOptions="Center"
                        WidthRequest="250"
                        Margin="0,20,0,40"
                        Clicked="OnSaveAllSettingsClicked"/>

            </VerticalStackLayout>

            </Grid>
            
            <!-- Footer with Accent Color -->
            <Border x:Name="FooterBorder"
                    BackgroundColor="#ff5722"
                    HeightRequest="100"
                    Padding="20">
                <Grid>
                    <Image Source="edit_icon.png"
                           HeightRequest="60"
                           Aspect="AspectFit"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Grid>
            </Border>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Custom Confirmation Overlay -->
        <Grid x:Name="ConfirmOverlay"
              Grid.RowSpan="2"
              IsVisible="False"
              BackgroundColor="#80000000">
            <Border VerticalOptions="Center" 
                    HorizontalOptions="Center"
                    WidthRequest="400"
                    Padding="30"
                    BackgroundColor="White"
                    StrokeShape="RoundRectangle 12"
                    Stroke="#e0e0e0"
                    StrokeThickness="1">
                <VerticalStackLayout Spacing="20">
                    <Label x:Name="ConfirmTitle"
                           Text="Confirm Action"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#333"
                           HorizontalTextAlignment="Center"/>
                    
                    <Label x:Name="ConfirmMessage"
                           Text="Are you sure you want to proceed?"
                           FontSize="14"
                           TextColor="#666"
                           HorizontalTextAlignment="Center"
                           Margin="0,0,0,10"/>
                    
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                        <Button Text="Cancel"
                                BackgroundColor="White"
                                TextColor="#333"
                                FontAttributes="Bold"
                                HeightRequest="45"
                                Clicked="OnConfirmCancelClicked"/>
                        
                        <Button x:Name="ConfirmActionButton"
                                Grid.Column="1"
                                Text="Confirm"
                                BackgroundColor="#ff5722"
                                TextColor="White"
                                FontAttributes="Bold"
                                HeightRequest="45"
                                BorderColor="#e0e0e0"
                                BorderWidth="1"
                                Clicked="OnConfirmActionClicked"/>
                    </Grid>
                </VerticalStackLayout>
            </Border>
        </Grid>

        <!-- Toast Notifications -->
        <controls:NotificationOverlay Grid.RowSpan="2" />
    </Grid>

</ContentPage>
