<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:CarrotDownload.Maui.Controls"
             x:Class="CarrotDownload.Maui.Views.SequencePage"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">
    
    <Grid RowDefinitions="Auto, *">
        <!-- Navigation Bar -->
        <controls:NavigationBar Grid.Row="0" />
        
        <Grid Grid.Row="1" ColumnDefinitions="0.5*,11*,0.5*">
        <ScrollView Grid.Column="1" VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never">
        <VerticalStackLayout Padding="40" Spacing="20" HorizontalOptions="Center">
            
            <!-- Back Button -->
            <Button Text="← Back to Dashboard"
                    BackgroundColor="#FF6600"
                    TextColor="White"
                    FontSize="14"
                    CornerRadius="4"
                    HeightRequest="36"
                    WidthRequest="180"
                    HorizontalOptions="Start"
                    Clicked="OnBackClicked"
                    Margin="0,0,0,10"/>
            
            <!-- Main Card -->
            <Border BackgroundColor="#f5f5f5"
                    StrokeShape="RoundRectangle 12"
                    Stroke="#e0e0e0"
                    StrokeThickness="1"
                    Padding="40"
                    MaximumWidthRequest="1400">
                <VerticalStackLayout Spacing="20">
                    
                    <!-- Title -->
                    <Label Text="Select Playlists to Process"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#333"
                           HorizontalOptions="Center"
                           Margin="0,0,0,10"/>
                    
                    <!-- Success Message -->
                    <Border x:Name="SuccessMessageBorder"
                            BackgroundColor="#d4edda"
                            StrokeShape="RoundRectangle 6"
                            Stroke="#c3e6cb"
                            StrokeThickness="1"
                            Padding="15,10"
                            IsVisible="False"
                            HorizontalOptions="Fill">
                        <Label x:Name="SuccessMessageLabel"
                               TextColor="#155724"
                               FontSize="14"
                               HorizontalOptions="Center"/>
                    </Border>
                    
                    <!-- Processing Queue Section -->
                    <Border x:Name="ProcessingQueueBorder"
                            BackgroundColor="#fff3cd"
                            StrokeShape="RoundRectangle 6"
                            Stroke="#ffc107"
                            StrokeThickness="2"
                            Padding="15"
                            IsVisible="False"
                            HorizontalOptions="Fill"
                            Margin="0,0,0,10">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="⏳ Currently Processing"
                                   TextColor="#856404"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Start"/>
                            <VerticalStackLayout x:Name="ProcessingQueueList" Spacing="5">
                                <!-- Processing items will be added here -->
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                    
                    <!-- Playlists List -->
                    <VerticalStackLayout x:Name="PlaylistsContainer" Spacing="12">
                        <!-- Playlists will be added here dynamically -->
                    </VerticalStackLayout>
                    
                    <Button x:Name="CreateFileButton"
                            Text="Create File"
                            BackgroundColor="#e0e0e0"
                            TextColor="#999999"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            HeightRequest="55"
                            WidthRequest="300"
                            HorizontalOptions="Center"
                            Clicked="OnCreateFileClicked"
                            Margin="0,10,0,0"/>
                    
                    <!-- Process Playlists Button -->
                    <Button x:Name="ProcessButton"
                            Text="Process 0 Playlists"
                            BackgroundColor="#e0e0e0"
                            TextColor="#999999"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            HeightRequest="55"
                            WidthRequest="300"
                            HorizontalOptions="Center"
                            Clicked="OnProcessPlaylistsClicked"/>
                    
                </VerticalStackLayout>
            </Border>
            
        </VerticalStackLayout>
    </ScrollView>
        </Grid>
    </Grid>
</ContentPage>
