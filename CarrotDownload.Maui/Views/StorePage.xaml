<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:CarrotDownload.Maui.Controls"
             x:Class="CarrotDownload.Maui.Views.StorePage"
             Title="Store"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">
    
    <Grid RowDefinitions="Auto,*">
        <controls:NavigationBar Grid.Row="0"/>
        
        <ScrollView Grid.Row="1" VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never">
            <VerticalStackLayout Spacing="0">
            <Grid ColumnDefinitions="0.5*,11*,0.5*">
            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Padding="20">
                <Label 
                    Text="Store Page"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center"
                    FontSize="24"
                    TextColor="Black"/>
            </VerticalStackLayout>
            
            </Grid>
            <controls:Footer/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
